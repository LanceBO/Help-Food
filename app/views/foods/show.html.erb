<!-- navbar -->
<div class="navshow">
  <div class="backto">
    <i class="fa-solid fa-chevron-left"></i>
    <%= link_to "Back to Fridge", foods_path  %>
  </div>

  <div class="right-buttons">

    <% if policy(@food).edit? %>
    <%= link_to edit_food_path(@food),
      data: {turbo_method: :edit, turbo_confirm: "Are you sure?"} do %>
        <button type="button" class="btn btn-secondary"><i class="fa-solid fa-pen-to-square"></i>Edit</button>
      <% end %>
    <% end %>

    <% if policy(@food).destroy? %>
      <%= link_to food_path(@food),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
        <button type="button" class="btn btn-secondary"><i class="fa-solid fa-trash"></i>Delete</button>
      <% end %>
    <% end %>


  </div>
</div>

<div class="container text-center">
  <div class="product">
    <!-- content -->
    <div class="product-image">
      <!-- todo Ã  rendre dynamique --><%= cl_image_tag("salade-verte_swnihp") %>
    </div>
    <div class="product-content">
      <h2> <%= @food.name  %> <%= @food.category %> </h2>
      <h6> <%= @food.expiration_date %> </h6>
        <%= link_to new_food_booking_path(@food.id) do %>
        <button type="button" class="btn btn-primary">Reserve this food</button>
        <% end %>
    </div>
  </div>
</div>
