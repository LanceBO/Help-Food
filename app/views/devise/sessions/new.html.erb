<div class="navshow">
  <div class="backto">
    <i class="fa-solid fa-chevron-left"></i>
    <%= link_to "Back to home", foods_path  %>
  </div>
</div>

<div class="session-pages">
  <div class="session-page">
    <div class="card border-0 inner-card session-form">
        <h2 class="text-center">Log in</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
          data: {turbo: false}) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            <%= link_to "Forgot your password?", new_password_path(resource_name)  %>
          </div>

          <div class="form-actions text-center">
            <button class="btn btn-primary mt-5"><%= f.button :submit, "Log in" %></button>
          </div>
        <% end %>
    </div>
  </div>

  <div class="session-page">
    <div class="card border-0 inner-card session-form">
        <h2 class="text-center">Don't have an account?</h2>
        <div class="text-center">
        <%= link_to "sign_up" do %>
        <button type="button" class="btn btn-secondary mt-1">Sign up</button>
        <% end %>
        </div>
    </div>
  </div>
</div>
