<div class="navshow">
  <div class="backto">
    <i class="fa-solid fa-chevron-left"></i>
    <%= link_to "Back to home", foods_path  %>
  </div>
</div>

<div class="center-content">
  <div class="boards">
    <div class="navshow mb-0 mt-0">
      <h1>Account</h1>
      <div class="right-buttons">
        <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "btn btn-secondary" %>
      </div>
    </div>
    <h2>Personal details</h2>
    <div class="card border-0 inner-card multiple">
      <div class="account-elements">
        <div class="account-pp">
          <%= cl_image_tag("account-fruit", :width => 70) %>
        </div>
        <div class="account-infos">
          <ul>
            <li><h5><%= @user.first_name %> <%= @user.last_name %></h5></li>
            <div class="text-secondary">
            <li><%= @user.email %></li>
            <li>Prime member</li>
            </div>
          </ul>
        </div>
      </div>
    </div>
    <div class="card border-0 inner-card multiple">
      <h2>Fridge</h2>
      <ul class="pills">
        <% @foods.each do |food| %>
        <li class="badge rounded-pill bg-secondary"> <%= food.name %> </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
